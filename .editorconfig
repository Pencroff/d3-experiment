; http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Use 2 spaces for indentation in HTML, JavaScript, Less, SCSS, XML and etc.

[*.{html, xml, jade}]
indent_size = 4

[*.{less, scss, css}]
indent_size = 2

[*.{js, es6, es, json}]
indent_size = 2

[*.{yaml, yml}]
indent_size = 2

# Use 4 spaces for indentation in Markdown files

[*.md]
indent_size = 4
